{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2015",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "lib": ["dom", "es2018"],
    "paths": {
      "primeng/*": ["libs/components/*/index"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false,
    "annotateForClosureCompiler": false,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "ng-softilys.js",
    "flatModuleId": "ng-softilys"
  },
  "exclude": [],
  "include": ["**/*.ts"],
  "files": [
    "./public_api.ts"
  ]
}
