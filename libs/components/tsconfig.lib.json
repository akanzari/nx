{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "target": "es2015",
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "../../dist/out-tsc",
    "rootDir": ".",
    "lib": ["dom", "es2018"],
    "skipLibCheck": true,
    "types": [],
    "paths": {
      "ng-softilys/*": ["*/public_api.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false,
    "annotateForClosureCompiler": false,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "ng-softilys.js",
    "flatModuleId": "ng-softilys"
  },
  "exclude": [],
  "include": ["**/*.ts"],
  "files": [
    "./public_api.ts"
  ]
}
